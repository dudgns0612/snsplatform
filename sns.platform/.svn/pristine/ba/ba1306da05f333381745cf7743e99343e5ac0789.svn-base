body{
	background: url('../img/it8.jpg') no-repeat center center fixed; 
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
}


.modifynick-container {
    width: 1135px;
    height : 550px;
    padding-right: 15px;
    padding-left: 15px;
    margin-right: auto;
    margin-left: auto;
    padding-top: 30px;
    padding-bottom : 40px;
    background: #699996;
    border-radius: 15px 15px 15px 15px;
    margin-top: 140px !important;
}

.modify-table{
	width: 100%;
}

.modify-table td{
	padding: 10px;
}

.modify-table input[type ="text"]{
	font-family : "Roboto", sans-serif;
	font-weight : bold;
	font-size : 15px;
}

/*전체 form 설정*/
.modifynick-form{
	position: relative;
	z-index: 1;
	background: #FFFFFF;
	max-width: 700px;
	margin: 50px auto 100px;
	padding: 50px 40px 50px 50px;
	text-align: center;
	border-radius: 30px;
	box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0
		rgba(0, 0, 0, 0.24);
}
/*input type = text/password 설정*/
.input-control {
	width: 95%;
	height: 34px;
	padding: 6px 12px;
	font-size: 14px;
	color: #555;
	background-color: #fff;
	background-image: none;
	border: 1px solid #ccc;
	border-radius: 4px;
}

/*중복확인 버튼이 있는 input = text*/
.overlap {
	width: 71%
}

.overlap-btn {
	font-family: "Roboto", sans-serif;
	text-transform: uppercase;
	background: #4A8C99;
	padding: 7px;
	color: #FFFFFF;
	width: 23%;
	font-size: 14px;
	cursor: pointer; /*커서모양을 바꿈*/
	border-radius: 8px;
}

.btn {
	font-family: "Roboto", sans-serif;
	text-transform: uppercase;
	background: #4A8C99;
	width: 25%;
	border: 0;
	padding: 15px;
	color: #FFFFFF;
	font-size: 15px;
	cursor: pointer; /*커서모양을 바꿈*/
	border-radius: 8px;
}

.float-left {
	margin-left: 135px;
	float: left;
}

.float-right {
	margin-right: 120px;
	float: right;
}

.btn:hover, .overlap-btn:hover, .filebox label:hover, .filebox button[type="button"]:hover{
	background: #368899;
	color: #FFFFFF;
}

.modify-title {
	font-family: "Roboto", sans-serif;
	font-size: 30px;
	padding-bottom: 50px !important;
}

.last-td{
	padding-top : 70px !important;
}


